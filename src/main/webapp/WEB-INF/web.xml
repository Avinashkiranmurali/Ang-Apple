<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
    version="3.0">

    <display-name>Bridge2Rewards - Success!</display-name>

    <resource-ref>
        <description>Database</description>
        <res-ref-name>jdbc/b2r</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
        <description>Database for Reporting</description>
        <res-ref-name>jdbc/reporting</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
        <description>Database for Payments</description>
        <res-ref-name>jdbc/payment</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <session-config>
        <session-timeout>40</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>


    <mime-mapping>
        <extension>wsdl</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>xsd</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>

    <!-- The Usual Welcome File List -->
    <welcome-file-list>
        <welcome-file>/ui/index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>400</error-code>
        <location>/error/resource_error.html</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error/resource_error.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/resource_error.html</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/error/resource_error.html</location>
    </error-page>
    <error-page>
        <error-code>422</error-code>
        <location>/error/resource_error.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/resource_error.html</location>
    </error-page>
    <error-page>
        <error-code>502</error-code>
        <location>/error/resource_error.html</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/error/resource_error.html</location>
    </error-page>
    <error-page>
        <error-code>504</error-code>
        <location>/error/resource_error.html</location>
    </error-page>
</web-app>
